{
  "Import another diagram": {
    "prefix": "import",
    "body": ["!include ${1:path/to/other_diagram.puml}"],
    "description": "Import another PlantUML diagram"
  },
  "Class definition": {
    "prefix": "class",
    "body": ["class ${1:ClassName} {", "    ${2:attribute}: ${3:Type}", "}"],
    "description": "Define a PlantUML class"
  },
  "Interface definition": {
    "prefix": "interface",
    "body": [
      "interface ${1:InterfaceName} {",
      "    ${2:method}: ${3:ReturnType}",
      "}"
    ],
    "description": "Define a PlantUML interface"
  },
  "Class implements interface": {
    "prefix": "implements",
    "body": ["${1:ClassName} ..|> ${2:InterfaceName}"],
    "description": "Connect class to interface (implements)"
  },
  "Note for element": {
    "prefix": "note",
    "body": [
      "note ${1:right|left|top|bottom} of ${2:ElementName}",
      "    ${3:Note text}",
      "end note"
    ],
    "description": "Attach a note to a class/interface"
  },
  "Inline note inside class": {
    "prefix": "note-inline-class",
    "body": [
      "note ${1:right|left} of ${2:className}::${3:arg}",
      "  ${4:note}",
      "end note"
    ],
    "description": "Add a note inside a class"
  },
  "Enum definition": {
    "prefix": "enum",
    "body": ["enum ${1:EnumName} {", "    ${2:VALUE1}", "}"],
    "description": "Define a PlantUML enum"
  },
  "Package definition": {
    "prefix": "package",
    "body": ["package ${1:PackageName} {", "    ${2}", "}"],
    "description": "Define a package"
  },
  "Nested packages": {
    "prefix": "package-nested",
    "body": [
      "package \"${1:System}\" {",
      "    package \"${2:SubPackage}\" {",
      "        class ${3:ClassName}",
      "    }",
      "}"
    ],
    "description": "Define nested packages"
  },
  "Layout direction": {
    "prefix": "layout",
    "body": ["${1:left to right|top to bottom} direction"],
    "description": "Control diagram layout direction"
  },
  "Together grouping": {
    "prefix": "together",
    "body": ["together {", "    ${1:ClassA}", "    ${2:ClassB}", "}"],
    "description": "Group elements together for layout"
  },
  "Hidden link for layout": {
    "prefix": "hidden",
    "body": ["${1:ClassA} -[hidden]-> ${2:ClassB}"],
    "description": "Add a hidden link to adjust layout"
  },
  "Separator": {
    "prefix": "separator",
    "body": ["== ${1:Section Title} =="],
    "description": "Add a labeled separator in diagram"
  },
  "Detailed sequence participant": {
    "prefix": "detailed sequence participant",
    "body": [
      "participant ${1:Participant} [",
      "    =${2:title}",
      "    ----",
      "    \"\"${3:subtitle}\"\"",
      "]"
    ],
    "description": "Add a multiline detailed sequence diagram participant"
  },
  "Sequence diagram numbering": {
    "prefix": "sequence diagram numbering",
    "body": "autonumber ${1:start} ${2:increment}",
    "description": "Define the autonumbering scheme for a sequence diagram"
  },
  "Message grouping": {
    "prefix": "sequence diagram grouping",
    "body": [
      "${1:alt|else|opt|loop|par|break|critical|group} ${2:secondaryLabelOrGroupName}",
      "else ${3:otherCondition}",
      "end"
    ],
    "description": "Group messages in a sequence diagram together, can be nested"
  },
  "Divide a sequence diagram small line": {
    "prefix": "sequence diagram split with small line",
    "body": "newpage",
    "description": "Splits a sequence diagram with a small line across"
  },
  "Divide a sequence diagram block": {
    "prefix": "sequence diagram split with large line",
    "body": "== ${1:display} ==",
    "description": "Splits a sequence diagram with a large line across"
  },
  "Delay in a sequence diagram": {
    "prefix": "sequence diagram delay",
    "body": "...${1:delay_length}...",
    "description": "Show a delay in a sequence diagram"
  }
}
