; [diff]
; 	tool = vscode
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
	cmd = "nvim -d $LOCAL $REMOTE"
; [difftool "vscode"]
; 	cmd = code --wait --diff $LOCAL $REMOTE
[merge]
	tool = vscode
; [mergetool "vscode"]
;   cmd = code --wait $MERGED
[alias]
	ff = "! git rebase -i \"`git merge-base develop HEAD`\""
	forkpoint = merge-base HEAD develop
	uts = "! GIT_COMMITTER_DATE=\"`date`\" && git commit --amend --no-edit"
	suir = "submodule update --init --recursive"
	srr = "submodule sync --recursive"
[safe]
	directory = .
[core]
	editor = nvim
	pager = delta
  excludesfile = ~/.gitignore-excludesfile
[commit]
	gpgsign = true
[rebase]
	autosquash = true
[interactive]
  diffFilter = delta --color-only --features=interactive
[delta]
  navigate = true
  side-by-side = true
  light = false
  true-color = always
  features = colibri
[pager]
  blame = delta
  diff = delta
  reflog = delta
  show = delta
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
